{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "IOS.Viewer": "Trace",
      "IOS.Base": "Debug"
    }
  },
  
  "Mqtt": {
    "Broker": "localhost",
    "Port": 1883,
    "ClientId": "IOS.Viewer.Dev",
    "Username": "",
    "Password": "",
    "KeepAlivePeriod": 30,
    "ReconnectDelay": 1000,
    "ConnectionTimeout": 10,
    "UseTls": false,
    "CleanSession": true,
    "ReconnectInterval": 2
  },

  "ViewerSettings": {
    "UI": {
      "RefreshInterval": 500,
      "EnableAnimations": true,
      "ShowNotifications": true
    },
    "Display": {
      "AutoConnect": false,
      "ShowConnectionStatus": true,
      "ShowSystemStatus": true,
      "StatusRefreshInterval": 2000,
      "MaxLogEntries": 5000
    },
    "Network": {
      "ConnectionTimeout": 5000,
      "RetryAttempts": 5,
      "RetryDelay": 1000
    }
  },

  "DeviceConfig": {
    "Motion": {
      "MinPosition": 0,
      "MaxPosition": 100000,
      "DefaultSpeed": 25000,
      "SafetyMargin": 500
    },
    "Coder": {
      "DefaultPort": 8080,
      "TimeoutMs": 3000,
      "BufferSize": 512
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "IOS.Viewer": "Trace",
        "IOS.Base": "Debug"
      }
    }
  }
} 
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:IOS.Viewer.ViewModels"
			 xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="IOS.Viewer.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
	
	<Grid Background="#F5F7FA">
		<ScrollViewer>
			<Grid Margin="20">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				
				<!-- 页面标题 -->
				<TextBlock Grid.Row="0"
						   Text="服务监控中心" 
						   FontSize="32" 
						   FontWeight="Bold"
						   Foreground="#2C3E50"
						   HorizontalAlignment="Center"
						   Margin="0,0,0,30"/>
				
				<!-- 服务监控区域 - 5个服务布局 -->
				<Grid Grid.Row="1" MinHeight="700">
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					
					<!-- 左上角：CoderStatus服务 -->
					<suki:GlassCard Grid.Row="0" Grid.Column="0" 
									Background="#FFFFFF" 
									BorderBrush="#E67E22" 
									BorderThickness="2"
									Margin="10">
						<Grid Margin="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							
							<!-- 服务标题和控制按钮 -->
							<Grid Grid.Row="0" Margin="0,0,0,10">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>
								
								<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
									<materialIcons:MaterialIcon Kind="Code" Foreground="#E67E22" Width="20" Height="20"/>
									<TextBlock Text="CoderStatus" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
								</StackPanel>
								
								<Border Grid.Column="1" Background="#E74C3C" CornerRadius="8" Padding="6,3" Margin="0,0,8,0" VerticalAlignment="Center">
									<TextBlock Text="{Binding CoderStatusText}" FontSize="10" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
								</Border>
								
								<!-- 重启按钮 -->
								<Button Grid.Column="2" 
										Width="40" Height="40" 
										Background="#F39C12" 
										CornerRadius="6" 
										Padding="0" 
										Margin="0,0,4,0"
										VerticalAlignment="Center"
										ToolTip.Tip="重启服务">
									<materialIcons:MaterialIcon Kind="Restart" Foreground="White" Width="20" Height="20"/>
								</Button>
								
								<!-- 配置按钮 -->
								<Button Grid.Column="3" 
										Width="40" Height="40" 
										Background="#9B59B6" 
										CornerRadius="6" 
										Padding="0" 
										VerticalAlignment="Center"
										ToolTip.Tip="配置服务">
									<materialIcons:MaterialIcon Kind="Settings" Foreground="White" Width="20" Height="20"/>
								</Button>
							</Grid>
							
							<!-- Topic信息 -->
							<TextBlock Grid.Row="1" 
									   Text="ios/v1/coder/#" 
									   FontSize="10" 
									   Foreground="#7F8C8D"
									   Margin="0,0,0,8"/>
							
							<!-- 消息显示区域 -->
							<Border Grid.Row="2" 
									Background="#FAFBFC" 
									BorderBrush="#E1E8ED" 
									BorderThickness="1" 
									CornerRadius="3">
								<ScrollViewer MaxHeight="180" VerticalScrollBarVisibility="Auto">
									<TextBlock Text="{Binding CoderStatusMessage}" 
											   FontSize="11"
											   Foreground="#2C3E50"
											   TextWrapping="Wrap"
											   FontFamily="Consolas, Monaco, 'Courier New', monospace"
											   Padding="8"
											   VerticalAlignment="Top"/>
								</ScrollViewer>
							</Border>
						</Grid>
					</suki:GlassCard>
					
					<!-- 右上角：DataServerStatus服务 -->
					<suki:GlassCard Grid.Row="0" Grid.Column="2" 
									Background="#FFFFFF" 
									BorderBrush="#3498DB" 
									BorderThickness="2"
									Margin="10">
						<Grid Margin="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							
							<!-- 服务标题和控制按钮 -->
							<Grid Grid.Row="0" Margin="0,0,0,10">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>
								
								<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
									<materialIcons:MaterialIcon Kind="DatabaseSettings" Foreground="#3498DB" Width="20" Height="20"/>
									<TextBlock Text="DataServerStatus" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
								</StackPanel>
								
								<Border Grid.Column="1" Background="#E74C3C" CornerRadius="8" Padding="6,3" Margin="0,0,8,0" VerticalAlignment="Center">
									<TextBlock Text="{Binding DataServerStatusText}" FontSize="10" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
								</Border>
								
								<!-- 重启按钮 -->
								<Button Grid.Column="2" 
										Width="40" Height="40" 
										Background="#F39C12" 
										CornerRadius="6" 
										Padding="0" 
										Margin="0,0,4,0"
										VerticalAlignment="Center"
										ToolTip.Tip="重启服务">
									<materialIcons:MaterialIcon Kind="Restart" Foreground="White" Width="20" Height="20"/>
								</Button>
								
								<!-- 配置按钮 -->
								<Button Grid.Column="3" 
										Width="40" Height="40" 
										Background="#9B59B6" 
										CornerRadius="6" 
										Padding="0" 
										VerticalAlignment="Center"
										ToolTip.Tip="配置服务">
									<materialIcons:MaterialIcon Kind="Settings" Foreground="White" Width="20" Height="20"/>
								</Button>
							</Grid>
							
							<!-- Topic信息 -->
							<TextBlock Grid.Row="1" 
									   Text="ios/v1/data/#" 
									   FontSize="10" 
									   Foreground="#7F8C8D"
									   Margin="0,0,0,8"/>
							
							<!-- 消息显示区域 -->
							<Border Grid.Row="2" 
									Background="#FAFBFC" 
									BorderBrush="#E1E8ED" 
									BorderThickness="1" 
									CornerRadius="3">
								<ScrollViewer MaxHeight="180" VerticalScrollBarVisibility="Auto">
									<TextBlock Text="{Binding DataServerStatusMessage}" 
											   FontSize="11"
											   Foreground="#2C3E50"
											   TextWrapping="Wrap"
											   FontFamily="Consolas, Monaco, 'Courier New', monospace"
											   Padding="8"
											   VerticalAlignment="Top"/>
								</ScrollViewer>
							</Border>
						</Grid>
					</suki:GlassCard>
					
					<!-- 中心：SchedulerStatus服务 -->
					<suki:GlassCard Grid.Row="1" Grid.Column="1" 
									Background="#FFFFFF" 
									BorderBrush="#9B59B6" 
									BorderThickness="2"
									Margin="10">
						<Grid Margin="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							
							<!-- 服务标题和控制按钮 -->
							<Grid Grid.Row="0" Margin="0,0,0,10">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>
								
								<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
									<materialIcons:MaterialIcon Kind="CalendarClock" Foreground="#9B59B6" Width="20" Height="20"/>
									<TextBlock Text="SchedulerStatus" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
								</StackPanel>
								
								<Border Grid.Column="1" Background="#E74C3C" CornerRadius="8" Padding="6,3" Margin="0,0,8,0" VerticalAlignment="Center">
									<TextBlock Text="{Binding SchedulerStatusText}" FontSize="10" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
								</Border>
								
								<!-- 重启按钮 -->
								<Button Grid.Column="2" 
										Width="40" Height="40" 
										Background="#F39C12" 
										CornerRadius="6" 
										Padding="0" 
										Margin="0,0,4,0"
										VerticalAlignment="Center"
										ToolTip.Tip="重启服务">
									<materialIcons:MaterialIcon Kind="Restart" Foreground="White" Width="20" Height="20"/>
								</Button>
								
								<!-- 配置按钮 -->
								<Button Grid.Column="3" 
										Width="40" Height="40" 
										Background="#9B59B6" 
										CornerRadius="6" 
										Padding="0" 
										VerticalAlignment="Center"
										ToolTip.Tip="配置服务">
									<materialIcons:MaterialIcon Kind="Settings" Foreground="White" Width="20" Height="20"/>
								</Button>
							</Grid>
							
							<!-- Topic信息 -->
							<TextBlock Grid.Row="1" 
									   Text="ios/v1/scheduler/#" 
									   FontSize="10" 
									   Foreground="#7F8C8D"
									   Margin="0,0,0,8"/>
							
							<!-- 消息显示区域 -->
							<Border Grid.Row="2" 
									Background="#FAFBFC" 
									BorderBrush="#E1E8ED" 
									BorderThickness="1" 
									CornerRadius="3">
								<ScrollViewer MaxHeight="180" VerticalScrollBarVisibility="Auto">
									<TextBlock Text="{Binding SchedulerStatusMessage}" 
											   FontSize="11"
											   Foreground="#2C3E50"
											   TextWrapping="Wrap"
											   FontFamily="Consolas, Monaco, 'Courier New', monospace"
											   Padding="8"
											   VerticalAlignment="Top"/>
								</ScrollViewer>
							</Border>
						</Grid>
					</suki:GlassCard>
					
					<!-- 左下角：MotionStatus服务 -->
					<suki:GlassCard Grid.Row="2" Grid.Column="0" 
									Background="#FFFFFF" 
									BorderBrush="#E74C3C" 
									BorderThickness="2"
									Margin="10">
						<Grid Margin="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							
							<!-- 服务标题和控制按钮 -->
							<Grid Grid.Row="0" Margin="0,0,0,10">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>
								
								<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
									<materialIcons:MaterialIcon Kind="MotionPlay" Foreground="#E74C3C" Width="20" Height="20"/>
									<TextBlock Text="MotionStatus" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
								</StackPanel>
								
								<Border Grid.Column="1" Background="#E74C3C" CornerRadius="8" Padding="6,3" Margin="0,0,8,0" VerticalAlignment="Center">
									<TextBlock Text="{Binding MotionStatusText}" FontSize="10" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
								</Border>
								
								<!-- 重启按钮 -->
								<Button Grid.Column="2" 
										Width="40" Height="40" 
										Background="#F39C12" 
										CornerRadius="6" 
										Padding="0" 
										Margin="0,0,4,0"
										VerticalAlignment="Center"
										ToolTip.Tip="重启服务">
									<materialIcons:MaterialIcon Kind="Restart" Foreground="White" Width="20" Height="20"/>
								</Button>
								
								<!-- 配置按钮 -->
								<Button Grid.Column="3" 
										Width="40" Height="40" 
										Background="#9B59B6" 
										CornerRadius="6" 
										Padding="0" 
										VerticalAlignment="Center"
										ToolTip.Tip="配置服务">
									<materialIcons:MaterialIcon Kind="Settings" Foreground="White" Width="20" Height="20"/>
								</Button>
							</Grid>
							
							<!-- Topic信息 -->
							<TextBlock Grid.Row="1" 
									   Text="ios/v1/motion/#" 
									   FontSize="10" 
									   Foreground="#7F8C8D"
									   Margin="0,0,0,8"/>
							
							<!-- 消息显示区域 -->
							<Border Grid.Row="2" 
									Background="#FAFBFC" 
									BorderBrush="#E1E8ED" 
									BorderThickness="1" 
									CornerRadius="3">
								<ScrollViewer MaxHeight="180" VerticalScrollBarVisibility="Auto">
									<TextBlock Text="{Binding MotionStatusMessage}" 
											   FontSize="11"
											   Foreground="#2C3E50"
											   TextWrapping="Wrap"
											   FontFamily="Consolas, Monaco, 'Courier New', monospace"
											   Padding="8"
											   VerticalAlignment="Top"/>
								</ScrollViewer>
							</Border>
						</Grid>
					</suki:GlassCard>
					
					<!-- 右下角：Vision服务 -->
					<suki:GlassCard Grid.Row="2" Grid.Column="2" 
									Background="#FFFFFF" 
									BorderBrush="#27AE60" 
									BorderThickness="2"
									Margin="10">
						<Grid Margin="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							
							<!-- 服务标题和控制按钮 -->
							<Grid Grid.Row="0" Margin="0,0,0,10">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>
								
								<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
									<materialIcons:MaterialIcon Kind="Eye" Foreground="#27AE60" Width="20" Height="20"/>
									<TextBlock Text="Vision" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
								</StackPanel>
								
								<Border Grid.Column="1" Background="#E74C3C" CornerRadius="8" Padding="6,3" Margin="0,0,8,0" VerticalAlignment="Center">
									<TextBlock Text="{Binding VisionStatusText}" FontSize="10" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
								</Border>
								
								<!-- 重启按钮 -->
								<Button Grid.Column="2" 
										Width="40" Height="40" 
										Background="#F39C12" 
										CornerRadius="6" 
										Padding="0" 
										Margin="0,0,4,0"
										VerticalAlignment="Center"
										ToolTip.Tip="重启服务">
									<materialIcons:MaterialIcon Kind="Restart" Foreground="White" Width="20" Height="20"/>
								</Button>
								
								<!-- 配置按钮 -->
								<Button Grid.Column="3" 
										Width="40" Height="40" 
										Background="#9B59B6" 
										CornerRadius="6" 
										Padding="0" 
										VerticalAlignment="Center"
										ToolTip.Tip="配置服务">
									<materialIcons:MaterialIcon Kind="Settings" Foreground="White" Width="20" Height="20"/>
								</Button>
							</Grid>
							
							<!-- Topic信息 -->
							<TextBlock Grid.Row="1" 
									   Text="ios/v1/vision/#" 
									   FontSize="10" 
									   Foreground="#7F8C8D"
									   Margin="0,0,0,8"/>
							
							<!-- 消息显示区域 -->
							<Border Grid.Row="2" 
									Background="#FAFBFC" 
									BorderBrush="#E1E8ED" 
									BorderThickness="1" 
									CornerRadius="3">
								<ScrollViewer MaxHeight="180" VerticalScrollBarVisibility="Auto">
									<TextBlock Text="{Binding VisionStatusMessage}" 
											   FontSize="11"
											   Foreground="#2C3E50"
											   TextWrapping="Wrap"
											   FontFamily="Consolas, Monaco, 'Courier New', monospace"
											   Padding="8"
											   VerticalAlignment="Top"/>
								</ScrollViewer>
							</Border>
						</Grid>
					</suki:GlassCard>
				</Grid>
			</Grid>
		</ScrollViewer>
		
		<!-- 返回按钮 -->
		<Button HorizontalAlignment="Left" 
				VerticalAlignment="Top" 
				Width="50" 
				Height="50"
				CornerRadius="25"
				Background="Transparent"
				BorderThickness="2"
				BorderBrush="#34495E"
				Command="{Binding NavigateBackCommand}"
				Margin="20"
				ToolTip.Tip="返回主页"
				Padding="0"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center">
			<Button.Styles>
				<Style Selector="Button:pointerover">
					<Setter Property="Background" Value="#34495E"/>
					<Setter Property="BorderBrush" Value="#2C3E50"/>
				</Style>
				<Style Selector="Button:pointerover materialIcons|MaterialIcon">
					<Setter Property="Foreground" Value="White"/>
				</Style>
			</Button.Styles>
			<Grid Width="50" Height="50">
				<materialIcons:MaterialIcon Kind="ArrowLeft" 
											Foreground="#34495E" 
											Width="24" 
											Height="24"
											HorizontalAlignment="Center"
											VerticalAlignment="Center" />
			</Grid>
		</Button>
	</Grid>

</UserControl> 